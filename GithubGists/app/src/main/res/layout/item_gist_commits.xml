<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:background="@drawable/img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/cat1"
        android:id="@+id/ivGistImg"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ivGistImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="rust-play"
            android:id="@+id/tvGistUsername"/>

        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGistUsername"
            tools:text="Code shared from the Rust Playground"
            android:singleLine="false"
            android:textSize="13sp"
            android:id="@+id/tvGistName"/>

        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/tvGistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="total: 8"
            android:id="@+id/tvGistCommitTotal"/>

        <TextView
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvGistCommitTotal"
            tools:text="additions: 8"
            android:id="@+id/tvGistCommitAdditions"/>

        <TextView
            android:textColor="@android:color/holo_red_light"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvGistCommitAdditions"
            tools:text="deletions: 0"
            android:id="@+id/tvGistCommitDeletions"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>